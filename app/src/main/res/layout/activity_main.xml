<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#bfFF4081" >


                <TextView
                    android:layout_width="45dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/toolbar_eat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/main_food_1st"
                    android:background="#00000000"/>



                <ImageButton
                    android:id="@+id/toolbar_hlju"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/hlju_1st"
                    android:background="#00000000"/>

                <ImageButton
                    android:id="@+id/toolbar_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/main_game_1st"
                    android:background="#00000000"/>

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />

                <ImageButton
                    android:id="@+id/toolbar_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/main_qr_code_1st"
                    android:background="#00000000"/>
            </android.support.v7.widget.Toolbar>


            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="525dp"
                android:layout_below="@+id/toolbar">
            </FrameLayout>


            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/windowBackground"
                android:layout_below="@+id/fragment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/environment_chat_navigation" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/side_pull_frame_1st">

            <RelativeLayout
                android:id="@+id/info_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000">

                <TextView
                    android:id="@+id/icon_top_tool"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/side_icon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_top_tool" >

                    <TextView
                        android:id="@+id/icon_left_tool"
                        android:layout_width="10dp"
                        android:layout_height="120dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/icon_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/boat"
                        android:background="#00000000"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/side_icon_layout"
                    android:text=" Mr.Huang"
                    android:textColor="#ffffffff"
                    android:background="#00000000"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:id="@+id/mail_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/username">

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Life's a struggle, be willing to do, be happy to bear."
                        android:textColor="#ffffffff"
                        android:background="#00000000"
                        android:textSize="14sp"/>

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/separation_line_1"
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="#ffffffff"
                android:layout_below="@id/info_top"
                android:layout_alignParentRight="true"
                />


            <Button
                android:id="@+id/q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/enironment_schedule_1st"
                android:text="   科协"
                android:gravity="center_vertical"
                android:background="#00000000"
                android:layout_below="@+id/separation_line_1"/>

            <TextView
                android:id="@+id/separation_line_2"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#b3ffffff"
                android:layout_below="@id/q"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/enironment_mail_1st"
                android:text="   头条"
                android:gravity="center_vertical"
                android:background="#00000000"
                android:layout_below="@+id/separation_line_2"/>

            <TextView
                android:id="@+id/separation_line_3"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#b3ffffff"
                android:layout_below="@id/a"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/enironment_collection_1st"
                android:text="   新浪"
                android:gravity="center_vertical"
                android:background="#00000000"
                android:layout_below="@+id/separation_line_3"/>

            <TextView
                android:id="@+id/separation_line_4"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#b3ffffff"
                android:layout_below="@id/z"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/enironment_welfare_1st"
                android:text="   地图"
                android:gravity="center_vertical"
                android:background="#00000000"
                android:layout_below="@+id/separation_line_4"/>

            <TextView
                android:id="@+id/separation_line_5"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#b3ffffff"
                android:layout_below="@id/w"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>